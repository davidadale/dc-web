# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Site.index
GET		/order/new								Orders.start
GET     /order/customer                         Orders.create
POST    /order/customer                         Orders.saveCustomerInfo
POST    /order/details                          Orders.saveOrderInfo
GET		/order/payment                          Orders.showCardForm
POST	/order/payment							Orders.saveCardInfo
GET		/order/confirm							Orders.confirmCharge
POST	/order/charge                           Orders.charge
POST    /order/billing                          Orders.saveBillingInfo
POST    /order/shipping                         Orders.saveShippingInfo                 
GET		/order/cancel							Orders.cancel
GET		/order/thanks							Orders.thankYou
GET     /order/{id}                             Orders.show
POST    /order                                  Orders.saveOrderInfo
GET     /billing                                Orders.billing
GET     /shipping                               Orders.shipping
GET     /shipper                                Orders.shipper

GET     /test                                   Label.test
GET     /barcode                                Label.barcode
GET		/label									Orders.label								
GET		/customers								Admin.customers
GET		/orders/{custId}                  		Admin.orders
GET		/customer/{id}/delete					Admin.deleteCustomer

GET		/api/song 								Api.addSong
POST    /api/song                               Api.addSong(format:'json')
POST    /api/document                           Api.addDocument
POST    /api/photo                              Api.addPhoto(format:'json')
POST    /api/order/item                         Api.addItem


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Import Secure routes
*      /                						module:secure

# Catch all
*       /{controller}/{action}                  {controller}.{action}
